<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.seanlin.unitravel.AddExpense">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="0dp">


        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/imageButtonBack"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_alignParentEnd="false"
            android:background="?attr/colorPrimary"
            android:contentDescription="HomeButton"
            android:layout_gravity="left" />

        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/imageButtonHelp"
            android:src="@android:drawable/ic_menu_help"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right"
            android:background="?attr/colorPrimary"
            android:contentDescription="HomeButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ADD EXPENSE"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#ffffff" />

    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:text="Save"
        android:id="@+id/save_expense_button"
        android:background="@drawable/button_yellow"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtoolbar"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name:"
                android:id="@+id/textView7"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:textSize="24dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/editText"
                android:layout_weight=".7"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cost:"
                android:id="@+id/textView20"
                android:layout_weight=".25"
                android:gravity="fill_vertical"
                android:textSize="24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="$"
                android:id="@+id/textView21"
                android:layout_weight=".05"
                android:gravity="fill_vertical"
                android:textSize="24dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/editText2"
                android:layout_weight=".7"
                android:singleLine="true"
                android:numeric="integer"
                android:inputType="number"
                android:hint="0" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Budget Summary"
            android:id="@+id/textView22"
            android:textSize="24dp"
            android:gravity="center" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/budget_summary_bar"
            android:progress="50"
            android:background="@drawable/rounded_corners"
            android:max="100"
            android:indeterminate="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView26"
                android:hint="50"
                android:textSize="24dp"
                android:layout_weight=".2"
                android:gravity="right"
                android:text="$" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/budget_spent_text"
                android:hint="50"
                android:textSize="24dp"
                android:layout_weight=".25"
                android:gravity="right"
                android:text="50" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="/"
                android:id="@+id/textView24"
                android:textSize="24dp"
                android:layout_weight=".1"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/budget_total_text"
                android:hint="100"
                android:textSize="24dp"
                android:layout_weight=".45"
                android:gravity="center|left"
                android:text="100" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:background="@color/maroon"
        android:id="@+id/frameLayout"></FrameLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/receipt_image"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/save_expense_button"
        android:scaleType="centerCrop" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:text="TAP TO ADD A RECEIPT"
        android:id="@+id/add_receipt_button"
        android:background="#00ffffff"
        android:textSize="50dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openCamera"
        android:layout_above="@+id/save_expense_button"
        android:textColor="#777777" />

</RelativeLayout>
