<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.seanlin.unitravel.HomeScreen"
    android:background="#bbbbbb">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Trip"
        android:id="@+id/new_trip_button"
        android:background="#ffffff"
        android:shadowColor="#00ffffff"
        android:singleLine="false"
        android:layout_marginTop="67dp"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Planned Trips"
        android:id="@+id/planned_trips_text"
        android:layout_marginTop="61dp"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/new_trip_button"
        android:layout_alignLeft="@+id/new_trip_button"
        android:layout_alignStart="@+id/new_trip_button" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Trip Name"
        android:id="@+id/button"
        android:background="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/planned_trips_text"
        android:layout_alignLeft="@+id/planned_trips_text"
        android:layout_alignStart="@+id/planned_trips_text"
        android:layout_marginTop="49dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#5b8efd">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HOME"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="36dp"
            android:textStyle="bold" />
    </FrameLayout>

</RelativeLayout>
