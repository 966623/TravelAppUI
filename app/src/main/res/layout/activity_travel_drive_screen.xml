<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        android:elevation="4dp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_alignParentEnd="false"
            android:layout_gravity="left"
            android:background="?attr/colorPrimary"
            android:contentDescription="HomeButton" />

        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/imageButtonCancel"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right"
            android:background="?attr/colorPrimary"
            android:contentDescription="HomeButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TRAVEL"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#ffffff" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignLeft="@+id/my_toolbar"
        android:layout_alignStart="@+id/my_toolbar"
        android:id="@+id/frameLayout5"
        android:background="#fefcfc">

        <Button
            android:layout_width="125dp"
            android:layout_height="68dp"
            android:text="Flight"
            android:id="@+id/button2"
            android:layout_gravity="left|top"
            android:textSize="18dp"
            android:background="#d5d2d2" />

        <Button
            android:layout_width="125dp"
            android:layout_height="68dp"
            android:text="Drive"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="#e6d100"
            android:textColor="#fbf7f7" />

        <Button
            android:layout_width="125dp"
            android:layout_height="68dp"
            android:text="Local"
            android:id="@+id/button4"
            android:layout_gravity="right|center_vertical"
            android:textColor="#fbf7f7"
            android:background="#d5d2d2"
            android:textSize="20dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:background="#fefcfc"
        android:layout_below="@+id/frameLayout5"
        android:id="@+id/frameLayout6">

        <TextView
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="From:__________"
            android:id="@+id/textView9"
            android:layout_gravity="left|center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#080808" />

        <TextView
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="To:__________"
            android:id="@+id/textView10"
            android:layout_gravity="center|right"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="20dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_below="@+id/frameLayout6"></FrameLayout>





</RelativeLayout>